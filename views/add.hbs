<h1>add</h1>

<form action="/add" method="post">
    {{#if error}}
    <p class="alert">{{error}}</p>
    {{/if}}
    <div class="row">
        <div class="input-field col s6">
            <input name="title" id="title" type="text" class="validate" required>
            <label class="active" for="title">title</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            <input name="price"  id="price" type="number" class="validate" required min="1">
            <label class="active" for="price">price</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>

        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <input name="img"  id="img" type="text" class="validate" required>
            <label class="active" for="img">img</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    </button>
</form>